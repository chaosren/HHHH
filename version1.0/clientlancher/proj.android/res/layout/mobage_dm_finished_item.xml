<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/mobage_dm_item_selector"
        android:clickable="true"
        android:gravity="center"
        android:paddingRight="5dp" >

        <ImageButton
            android:id="@+id/btStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mbga_transparent"
            android:focusable="false"
            android:paddingLeft="3dp"
            android:src="@drawable/mobage_dm_install_selector" />
    </LinearLayout>
    
    <ImageView
            android:id="@+id/ivSplitLine"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/statusLayout"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/mobage_dm_split_line" />

    <LinearLayout
        android:id="@+id/listLeftLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivSplitLine"
        android:background="@drawable/mobage_dm_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/trashcanLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/mobage_dm_bg_black"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ivTrashcan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/mobage_dm_trashcan_bg_selector"
                android:focusable="false"
                android:paddingRight="3dp"
                android:src="@drawable/mobage_dm_trashcan"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitStart"
                android:src="@drawable/mobage_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconLayout"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/RelativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="name"
                    android:textColor="@color/mbga_text_black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/downloadInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mbga_DownloadInfo_fileSize"
                    android:textColor="@color/mbga_text_gray_list"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvSize"
                    android:paddingLeft="3dp"
                    android:text="length"
                    android:textColor="@color/mbga_text_gray_list"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/length"
                    android:paddingLeft="10dp"
                    android:text="@string/mbga_DownloadInfo_versionName"
                    android:textColor="@color/mbga_text_gray_list"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/versionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvVersion"
                    android:paddingLeft="3dp"
                    android:text="v"
                    android:textColor="@color/mbga_text_gray_list"
                    android:textSize="14dp"
                    android:singleLine="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>