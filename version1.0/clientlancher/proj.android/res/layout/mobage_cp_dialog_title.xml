<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mbga_cp_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	   	<ImageView
        	android:id="@+id/mbga_cp_title_logo"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:scaleType="fitXY"
    		android:contentDescription="@string/mbga_content_description" />
        
    	<RelativeLayout
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" >
    	
        	<ImageView
            	android:id="@+id/mbga_cp_title_bg"
        		android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:scaleType="fitXY"
    			android:contentDescription="@string/mbga_content_description" />
        
        	<ImageButton
            	android:id="@+id/mbga_cp_title_close"
            	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
            	android:layout_alignRight="@id/mbga_cp_title_bg"
            	android:scaleType="fitXY"
            	android:layout_centerVertical="true"
            	android:contentDescription="@string/mbga_content_description" />
        
    	</RelativeLayout>
    </LinearLayout>
</LinearLayout>