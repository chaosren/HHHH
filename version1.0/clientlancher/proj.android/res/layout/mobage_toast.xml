<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/mobage_welcome_bg"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="74dip"
    android:orientation="horizontal">
    <TextView
            android:id="@+id/toast_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:text="" />
    <TextView
            android:id="@+id/toast_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="，欢迎回到梦宝谷！" />
	</LinearLayout>
    
     <TextView
            android:id="@+id/toast_modify_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dip"
            android:textSize="11dp"
            android:textColor="#ffffff"
            android:paddingLeft="74dip"
            android:text="您的昵称为系统自动生成，请尽快修改。" />
    
</LinearLayout>