<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffffff"
    android:focusable="false"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/mobage_dm_item_selector"
        android:clickable="true"
        android:gravity="center"
        android:paddingRight="5dp" >

        <ImageButton
            android:id="@+id/btStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mbga_transparent"
            android:focusable="false"
            android:paddingLeft="3dp"
            android:src="@drawable/mobage_dm_download_selector" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/ivSplitLine"
        android:layout_width="2dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/statusLayout"
        android:scaleType="fitXY"
        android:src="@drawable/mobage_dm_split_line" />

    <LinearLayout
        android:id="@+id/listLeftLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivSplitLine"
        android:background="@drawable/mobage_dm_item_selector"
        android:clickable="true"
        android:gravity="center" >

	    <LinearLayout
	        android:id="@+id/trashcanLayout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center" >
	
	        <ImageView
	            android:id="@+id/ivTrashcan"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/mobage_dm_trashcan_bg_selector"
	            android:focusable="false"
	            android:src="@drawable/mobage_dm_trashcan"
	            android:paddingRight="3dp"
	            android:visibility="gone" />
	
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent" >
	
	        <LinearLayout
	            android:id="@+id/iconLayout"
	            android:layout_width="72dp"
	            android:layout_height="fill_parent"
	            android:padding="5dp" >
	
	            <ImageView
	                android:id="@+id/icon"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:focusable="false"
	                android:scaleType="fitXY"
	                android:src="@drawable/mobage_icon" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/infoLayout"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginRight="5dp"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="5dp"
	                android:text="name"
	                android:textColor="@color/mbga_text_black"
	                android:textSize="16dp" />
	
	            <ProgressBar
	                android:id="@+id/progressBar"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="3dp"
	                android:paddingTop="3dp" />
	
	            <RelativeLayout
	                android:id="@+id/downloadInfoLayout"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:id="@+id/completed"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:textColor="@color/mbga_text_gray_list" />
	
	                <TextView
	                    android:id="@+id/length"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_toRightOf="@id/completed"
	                    android:text="length"
	                    android:textColor="@color/mbga_text_gray_list" />
	
	                <TextView
	                    android:id="@+id/description"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dp"
	                    android:layout_toRightOf="@id/length"
	                    android:paddingRight="10dp"
	                    android:textColor="@color/mbga_text_gray_list"
	                    android:singleLine="true" />
	
	                <TextView
	                    android:id="@+id/percentageText"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:text="perText"
	                    android:textColor="@color/mbga_text_gray_list" />
	            </RelativeLayout>
	        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        
</RelativeLayout>