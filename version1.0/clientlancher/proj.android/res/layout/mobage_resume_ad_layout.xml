<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/mbga_resume_ad"
        android:src="@drawable/mobage_rsume_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/mbga_content_description"/>
    
    <ImageView 
        android:id="@+id/mbga_ad_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignRight="@id/mbga_resume_ad"
        android:adjustViewBounds="true"
        android:contentDescription="@string/mbga_content_description"/>
</RelativeLayout>