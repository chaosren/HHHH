<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/mobage_dm_title" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/titleLayout"
        android:background="@color/mbga_title_bg_gray" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btDownloading"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/mbga_transparent"
                android:onClick="onClick"
                android:text="@string/mbga_DmActivity_tabDownloading"
                android:textColor="@color/mbga_text_black"
                android:textSize="16dp" />
            
            <LinearLayout
                android:id="@+id/downloadLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mbga_title_bg_green" >
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finishedLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mbga_title_bg_gray" >

            <Button
                android:id="@+id/btFinished"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/mbga_transparent"
                android:onClick="onClick"
                android:text="@string/mbga_DmActivity_tabFinished"
                android:textColor="@color/mbga_text_gray_title"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:paddingLeft="80dp"
                android:src="@drawable/mobage_dm_dot"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/finishedLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mbga_title_bg_green"
                android:visibility="gone" >

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:background="#f2f9fd"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/emptyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobage_dm_nonegame" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/mbga_DmActivity_empty"
            android:textColor="@color/mbga_text_gray_list"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mbga_DmActivity_emptyMessage"
            android:textColor="@color/mbga_text_gray_list"
            android:textSize="14sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/downloadingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:background="#f2f9fd"
        android:visibility="visible" />

    <ListView
        android:id="@+id/finishedListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:background="#f2f9fd"
        android:visibility="gone" />

</RelativeLayout>